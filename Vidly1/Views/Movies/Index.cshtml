@model IEnumerable<Vidly1.Models.Movie> 

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("NEW MOVIE", "New", "Movies", routeValues: null, htmlAttributes: new { id = "newMovieLink", @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Movie</td>
            <td>Genre</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name, "Edit", new { id = m.Id })</td>
                <td>@m.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

  